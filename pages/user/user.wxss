.my-train-container{
  height: 100vh;
  background: rgba(247,247,247,1);
}
.header-box{
  display: flex;
  height: 300rpx;
  background: #0D83EE;
  padding-top: 36rpx;
}
.header-box image{
  margin: 0 30rpx;
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
}
.header-box view{
  display: flex;
  height: 144rpx;
  flex-direction: column;
  justify-content: space-around;
  color: #fff;
  font-family:Source Han Sans CN;
}
.header-box view .line-1, .header-box view .line-2{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.header-box view .line-1 text:first-child, .header-box view .line-2 text:first-child{
  margin-right: 32rpx;
}
.header-box view .line-1{
  font-size: 34rpx;
  font-weight: 500;
}

.header-box view .line-2{
  font-size: 28rpx;
  color: rgba(255,255,255,0.9)
}


.login-out{
  margin-top: 16rpx;
  width: 100%;
  height: 94rpx;
  text-align: center;
  line-height: 94rpx;
  font-size: 32rpx;
  background: #fff;
  border-top: 2rpx solid rgba(243,242,242,1);
  border-bottom: 2rpx solid rgba(243,242,242,1);
}