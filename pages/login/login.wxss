view, button, input {
  box-sizing: border-box;
}

.login-phone-number-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  position: relative;
}

.page-content {
  flex: 1;
  overflow: auto;
}

.app-main-body {
  margin-top: 144rpx;
  text-align: center;
}

.app-main-body image {
  width: 144rpx;
  height: 144rpx;
}

.app-main-body .app-name {
  font-size: 38rpx;
  line-height: 38rpx;
  color: #0d83ee;
  margin-top: 20rpx;
}

.input-item {
  width: 660rpx;
  position: relative;
  margin-top: 50rpx;
  margin: 58rpx auto 0 auto;
}

.input-item input {
  width: 100%;
  height: 80rpx;
  background: #f7f7f7;
  border-radius: 10rpx;
  box-shadow: 0px 10px 10px -5px rgb(236, 236, 236);
  position: relative;
  padding: 0 64rpx;
}

.input-item .icon-phone-number {
  width: 20rpx;
  height: 30rpx;
  position: absolute;
  left: 33rpx;
  top: 50%;
  transform: translateY(-50%);
  display: block;
}

.input-item .icon-password {
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  left: 33rpx;
  top: 50%;
  transform: translateY(-50%);
  display: block;
}

.input-item .icon-clear {
  width: 30rpx;
  height: 30rpx;
  padding: 20rpx;
  position: absolute;
  right: 0rpx;
  top: 50%;
  transform: translateY(-50%);
  opacity: .7;
}

.input-item .blue-btn {
  color: #fff;
  background: #0d83ee;
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  line-height: 80rpx;
  width: 200rpx;
  font-size: 30rpx;
  z-index: 10;
}

button::after {
  border: none;
}

.page-content > .blue-btn {
  width: 660rpx;
  margin: 50rpx auto 0 auto;
  color: #fff;
  background: #0d83ee;
  font-size: 36rpx;
  font-weight: 400;
}


